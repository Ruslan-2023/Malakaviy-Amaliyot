<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mualliflar">

    <ImageView
        android:id="@+id/muallifRasmi"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/muallifIsmFam"
        android:layout_below="@+id/muallifRasmi"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Muallif ism familiyasi"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/muallifHaqida"
        android:text="Muallif haqida malumot"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/muallifIsmFam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>